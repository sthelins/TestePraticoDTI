			m = 4;
		} else if (m == 7 | m == 07) {
			m = 5;
		} else if (m == 8) {
			m = 6;
		} else if (m == 9) {
			m = 7;
		}else if (m == 10) {
			m = 8;
		} else if (m == 11) {
			m = 9;
		} else if (m == 12) {
			m = 10;
		} else {
			System.out.println("mês inválido. Recomeçe!");
			System.exit(0);
		}
		
		System.out.print("Ano: ");
		int a = entrada.nextInt();
		a = a - 2000;
		int c = 20;
		int k = ( d + ((13 * m - 1) / 5) + a + (a/4) + (c / 4) + (5 * c) ) % 7 - 1;
		System.out.println(k); 
	
		
